<body>
      <nav class="navbar">
        <div class="nav-left">
            <a href="/" class="nav-logo"><%= shopData.shopName %></a>
        </div>

        <ul class="nav-center">
            <li><a href="../about">About</a></li>
            <li><a href="./add">Add Meals</a></li>
            
            <li><a href="./list">All Meals</a></li>
            <li><a href="./search">Search Meals</a></li>
        </ul> 

        <div class="nav-right">
            <a href="../auth/login" class="login-btn">Login</a>
            <a href="../auth/logout" class="login-btn">Logout</a>
        </div>
    </nav>
  <div class="index-container">
    <div class="section">
      <h1>Edit Meal</h1>

      <form action="/meals/edit/<%= meal.id %>" method="POST">
        <label>Meal Name</label>
        <input type="text" name="name" value="<%= meal.name %>" required>

        <label>Sets</label>
        <input type="number" step="1" name="Calories" value="<%= meal.calories %>" required>

        <label>Reps</label>
        <input type="number" step="1" name="Protein" value="<%= meal.protein %>" required>

        <div class="actions">
          <button class="btn btn-primary" type="submit">Save</button>
          <a class="btn" href="../meals/list">Cancel</a>
        </div>
      </form>
    </div>

  </div>
</body>
</html>
