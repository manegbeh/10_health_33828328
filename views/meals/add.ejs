        <a href="../auth/login" class="login-btn">Login</a>
        <a href="/logout" class="login-btn">Logout</a>
      </div>

    </nav>
  <div class="section">
    <h2 style="margin-top:0">Add a New Meal</h2>

    <form action="./add" method="POST">
      <label>Meal Name</label>
      <input type="text" name="name" required>

      <label>Calories (cal)</label>
      <input type="number" step="1" name="calories" required>

      <label>Protein (g)</label>
      <input type="number" step="1" name="protein" required>

      <div class="actions">
        <button class="btn btn-primary" type="submit">Add Meal</button>
        <a class="btn" href="./list">Back to List</a>
      </div>
    </form>

  </div>
</div>
